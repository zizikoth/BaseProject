<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp25"
    tools:context=".ui.fragment.account.LoginFragment">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/mEtUserName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:background="@null"
        android:hint="请输入用户名"
        android:textColor="@color/textDark"
        android:textColorHint="@color/textLight"
        android:textCursorDrawable="@drawable/edit_cursor"
        android:textSize="@dimen/textNormal" />

    <com.hjq.shape.view.ShapeView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0_5"
        app:shape_radius="@dimen/dp0_5"
        app:shape_solidColor="@color/colorMain50" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/mEtPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:layout_marginTop="@dimen/dp20"
        android:background="@null"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:textColor="@color/textDark"
        android:textColorHint="@color/textLight"
        android:textCursorDrawable="@drawable/edit_cursor"
        android:textSize="@dimen/textNormal" />

    <com.hjq.shape.view.ShapeView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0_5"
        app:shape_radius="@dimen/dp0_5"
        app:shape_solidColor="@color/colorMain50" />

    <com.hjq.shape.view.ShapeButton
        android:id="@+id/mBtnLogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:layout_marginTop="@dimen/dp96"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/textLarge"
        app:shape_radius="@dimen/dp45"
        app:shape_solidColor="@color/colorMain" />


</androidx.appcompat.widget.LinearLayoutCompat>