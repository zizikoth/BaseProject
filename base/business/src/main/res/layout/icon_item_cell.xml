<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp45"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mTvItem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp10"
            android:gravity="center_vertical"
            android:textColor="@color/textDark"
            android:textSize="@dimen/textNormal"
            tools:drawableLeft="@mipmap/ic_launcher"
            tools:text="这个条目" />

        <TextView
            android:id="@+id/mTvExtra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textLight"
            android:textSize="@dimen/textSmall"
            android:visibility="gone"
            tools:text="额外文字"
            android:layout_marginStart="@dimen/dp10"
            tools:visibility="visible" />

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/mTvBadge"
            android:layout_width="@dimen/dp16"
            android:layout_height="@dimen/dp16"
            android:layout_marginStart="@dimen/dp10"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="@dimen/textSuperSmall"
            app:shape_radius="@dimen/dp16"
            app:shape_solidColor="@color/color_red"
            android:visibility="gone"
            tools:visibility="visible"
            tools:ignore="SmallSp"
            tools:text="1" />

        <ImageView
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_marginEnd="-5dp"
            android:rotation="180"
            android:layout_marginStart="@dimen/dp5"
            android:src="@mipmap/icon_arrow_left"
            tools:ignore="ContentDescription" />


    </LinearLayout>

    <View
        android:id="@+id/mLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0_5"
        android:layout_gravity="bottom"
        android:background="#f5f5f5" />

</FrameLayout>