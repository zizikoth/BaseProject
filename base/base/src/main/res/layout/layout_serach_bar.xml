<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp45">

    <com.hjq.shape.view.ShapeEditText
        android:id="@+id/mEtSearch"
        app:shape_radius="@dimen/dp30"
        app:shape_solidColor="@color/color_F5F5F5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp30"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:background="@null"
        android:gravity="center_vertical"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLength="20"
        android:maxLines="1"
        android:paddingStart="@dimen/dp20"
        android:paddingEnd="@dimen/dp35"
        android:textColor="@color/textDark"
        android:textColorHint="@color/textLight"
        android:textCursorDrawable="@drawable/edit_cursor"
        android:textSize="@dimen/textNormal" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/mIvSearch"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="@dimen/dp20"
        android:padding="@dimen/dp7"
        android:src="@drawable/ic_search"
        tools:targetApi="m" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0_5"
        android:layout_gravity="bottom"
        android:background="@color/color_EEEEEE" />

</FrameLayout>
