<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TitleBar">
        <attr name="title_title_text" format="string" />
        <attr name="title_marquee" format="boolean"/>
        <attr name="title_subtitle_text" format="string" />
        <attr name="title_show_back" format="boolean" />
        <attr name="title_right_drawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="ItemCell">
        <attr name="item_cell_title" format="string" />
        <attr name="item_cell_content" format="string" />
        <attr name="item_cell_width" format="dimension" />
    </declare-styleable>

    <declare-styleable name="IconItemCell">
        <attr name="icon_item_cell_drawable" format="reference" />
        <attr name="icon_item_cell_title" format="string" />
        <attr name="icon_item_cell_extra" format="string" />
        <attr name="icon_item_cell_badge_num" format="integer" />
        <attr name="icon_item_cell_show_badge" format="boolean" />
        <attr name="icon_item_cell_show_dot" format="boolean" />
        <attr name="icon_item_cell_show_line" format="boolean" />
    </declare-styleable>

    <declare-styleable name="LabelView">
        <attr name="label_text" format="string"/>
        <attr name="label_text_color" format="color"/>
        <attr name="label_text_size" format="dimension"/>
        <attr name="label_text_bold" format="boolean"/>
        <attr name="label_text_all_caps" format="boolean"/>
        <attr name="label_background_color" format="color"/>
        <attr name="label_min_size" format="dimension"/>
        <attr name="label_padding" format="dimension"/>
        <attr name="label_gravity" format="enum">
            <enum name="TOP_LEFT" value="51"/>
            <enum name="TOP_RIGHT" value="53"/>
            <enum name="BOTTOM_LEFT" value="83"/>
            <enum name="BOTTOM_RIGHT" value="85"/>
        </attr>
        <attr name="label_fill_triangle" format="boolean"/>
    </declare-styleable>

</resources>